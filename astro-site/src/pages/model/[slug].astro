---
import Layout from '../../layouts/Layout.astro';
import MarkdownContent from '../../components/MarkdownContent.astro';

export async function getStaticPaths() {
  let modelData = { models: [] };
  try {
    const data = await import('../../../../patron_models.json');
    modelData = data.default || data;
  } catch (e) {
    console.warn('patron_models.json not found');
  }
  
  return modelData.models.map((model) => ({
    params: { slug: model.slug },
    props: { model },
  }));
}

const { model } = Astro.props;
---

<Layout title={`${model.name} - 3D Studio`}>
  <!-- Hero Section -->
  <section class="py-12 px-6 bg-white border-b-2 border-black">
    <div class="max-w-7xl mx-auto">
      <div class="flex items-center gap-4 mb-8">
        <a href={`${import.meta.env.BASE_URL.replace(/\/$/, '')}/models`} 
           class="refined-button-outline">
          <span>← Back to Portfolio</span>
        </a>
        <div class="text-sm uppercase tracking-widest text-gray-600">
          {model.type}
        </div>
      </div>
      
      <h1 class="refined-title mb-6">
        <span class="refined-outline">{model.name.split(' ')[0]}</span><br/>
        {model.name.split(' ').slice(1).join(' ').toUpperCase()}
      </h1>
    </div>
  </section>

  <!-- Model Content -->
  <section class="py-20 px-6">
    <div class="max-w-7xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        <!-- Image -->
        <div class="refined-slide-up">
          {model.thumbnail && (
            <div class="refined-card overflow-hidden">
              <img 
                src={model.thumbnail} 
                alt={model.name}
                class="w-full h-96 lg:h-[500px] object-cover"
                onerror="this.onerror=null; this.src=this.src.replace('main.jpg', 'main.png')"
              />
            </div>
          )}
        </div>
        
        <!-- Content -->
        <div class="refined-slide-up">
          <div class="mb-12">
            <h2 class="refined-subtitle mb-6">
              Model <span class="refined-outline">Details</span>
            </h2>
            <div class="prose prose-lg max-w-none">
              <MarkdownContent content={model.description} />
            </div>
          </div>
          
          <!-- Makerworld Button -->
          {model.makerworld_url && (
            <div class="mb-12">
              <a 
                href={model.makerworld_url}
                target="_blank"
                rel="noopener noreferrer"
                class="refined-button inline-flex items-center gap-3 bg-black text-white hover:bg-white hover:text-black"
              >
                <span>View on Makerworld</span>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
            </div>
          )}
          
          <!-- Download Section -->
          <div class="border-t-2 border-black pt-12">
            <h3 class="refined-subtitle mb-8">
              <span class="refined-outline">Download</span> Options
            </h3>
            
            <div class="space-y-4">
              {model.bundles.images && model.bundles.images.url && (
                <a 
                  href={model.bundles.images.url}
                  target="_blank"
                  class="refined-card p-6 block group hover:border-black transition-colors"
                >
                  <div class="flex justify-between items-center">
                    <div>
                      <div class="text-xl font-bold mb-2">Images Bundle</div>
                      {model.bundles.images.size && (
                        <div class="text-gray-600">
                          {model.bundles.images.size} • {model.bundles.images.file_count || 0} files
                        </div>
                      )}
                    </div>
                    <div class="text-2xl font-black group-hover:translate-x-1 transition-transform">
                      →
                    </div>
                  </div>
                </a>
              )}
              
              {model.bundles.models && model.bundles.models.url && (
                <a 
                  href={model.bundles.models.url}
                  target="_blank"
                  class="refined-card p-6 block group hover:border-black transition-colors"
                >
                  <div class="flex justify-between items-center">
                    <div>
                      <div class="text-xl font-bold mb-2">3D Models Bundle</div>
                      {model.bundles.models.size && (
                        <div class="text-gray-600">
                          {model.bundles.models.size} • {model.bundles.models.file_count || 0} files
                        </div>
                      )}
                    </div>
                    <div class="text-2xl font-black group-hover:translate-x-1 transition-transform">
                      →
                    </div>
                  </div>
                </a>
              )}
              
              {model.bundles.all && model.bundles.all.url && (
                <a 
                  href={model.bundles.all.url}
                  target="_blank"
                  class="refined-card p-6 block group hover:border-black transition-colors bg-black text-white"
                >
                  <div class="flex justify-between items-center">
                    <div>
                      <div class="text-xl font-bold mb-2">
                        <span class="refined-outline-white">Complete</span> Bundle
                      </div>
                      {model.bundles.all.size && (
                        <div class="text-gray-300">
                          {model.bundles.all.size} • {model.bundles.all.file_count || 0} files
                        </div>
                      )}
                    </div>
                    <div class="text-2xl font-black group-hover:translate-x-1 transition-transform refined-outline-white">
                      →
                    </div>
                  </div>
                </a>
              )}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>