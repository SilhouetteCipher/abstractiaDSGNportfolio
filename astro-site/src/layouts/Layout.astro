<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;700;900&display=swap');
  
  html {
    font-family: 'Inter', system-ui, sans-serif;
  }
  
  /* Prevent horizontal scroll */
  body {
    overflow-x: hidden;
  }
  
  /* Selection styling */
  ::selection {
    background: #000;
    color: #fff;
  }
  
  /* Animated gradient text with semi-pastel orange to teal */
  .refined-outline {
    background: linear-gradient(135deg, 
      #fb923c,      /* soft orange */
      #fdba74,      /* peach */
      #f9a8d4,      /* soft pink */
      #67e8f9,      /* light cyan */
      #5eead4,      /* soft teal */
      #fb923c       /* back to orange for seamless loop */
    );
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
    position: relative;
    line-height: 1.1;
    display: inline-block;
    font-weight: 900;
    animation: gradientShift 20s ease infinite;
  }
  
  @keyframes gradientShift {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }
  
  .refined-outline-white {
    background: linear-gradient(135deg, 
      #fb923c,      /* soft orange */
      #fdba74,      /* peach */
      #f9a8d4,      /* soft pink */
      #67e8f9,      /* light cyan */
      #5eead4,      /* soft teal */
      #fb923c       /* back to orange for seamless loop */
    );
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
    position: relative;
    line-height: 1.1;
    display: inline-block;
    font-weight: 900;
    animation: gradientShift 20s ease infinite;
  }
  
  /* Improved hover fill effect */
  .refined-hover {
    position: relative;
    transition: all 0.3s ease;
    overflow: hidden;
  }
  
  .refined-hover::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(135deg, 
      #fb923c,      /* soft orange */
      #fdba74,      /* peach */
      #f9a8d4,      /* soft pink */
      #67e8f9,      /* light cyan */
      #5eead4,      /* soft teal */
      #fb923c       /* back to orange for seamless loop */
    );
    background-size: 200% 200%;
    animation: gradientShift 20s ease infinite;
    transition: width 0.3s ease;
  }
  
  .refined-hover:hover::after {
    width: 100%;
  }
  
  /* Typography sizes - more manageable */
  .refined-title {
    font-size: clamp(3rem, 8vw, 6rem);
    line-height: 0.9;
    font-weight: 900;
    letter-spacing: -0.02em;
  }
  
  .refined-subtitle {
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    line-height: 1.1;
    font-weight: 800;
    letter-spacing: -0.01em;
  }
  
  .refined-number {
    font-size: clamp(4rem, 12vw, 8rem);
    line-height: 0.8;
    font-weight: 900;
    /* Prevent overlapping */
    position: relative;
    z-index: 1;
  }
  
  /* Grid typography */
  .refined-grid-title {
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 800;
    line-height: 1.2;
  }
  
  /* Improved card styling */
  .refined-card {
    border: 2px solid black;
    transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    position: relative;
    overflow: hidden;
  }
  
  .refined-card:hover {
    transform: translateY(-4px);
    box-shadow: 8px 8px 0px rgba(0, 0, 0, 0.1);
  }
  
  /* Better text contrast */
  .refined-contrast {
    text-shadow: 1px 1px 0px rgba(255, 255, 255, 0.8);
  }
  
  /* Refined animations */
  .refined-slide-up {
    animation: slideUp 0.6s ease-out;
  }
  
  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Type reveal with better spacing */
  .refined-reveal {
    overflow: hidden;
    position: relative;
  }
  
  /* Social icon gradient */
  .social-icon-gradient {
    position: relative;
  }
  
  .social-icon-gradient svg {
    width: 100%;
    height: 100%;
  }
  
  .refined-reveal::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background: black;
    transform: translateX(-100%);
    animation: reveal 1s ease-out 0.3s forwards;
  }
  
  @keyframes reveal {
    to {
      transform: translateX(0);
    }
  }
  
  /* Text fill animation */
  .hover-fill {
    position: relative;
    display: inline-block;
    background: linear-gradient(to right, black 50%, transparent 50%);
    background-size: 200% 100%;
    background-position: 100% 0;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    transition: background-position 0.3s ease;
  }
  
  .hover-fill:hover {
    background-position: 0 0;
  }
  
  /* Slide animations */
  @keyframes slideInLeft {
    from {
      opacity: 0;
      transform: translateX(-50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  .slide-in-left {
    animation: slideInLeft 0.8s ease-out;
  }
  
  .slide-in-right {
    animation: slideInRight 0.8s ease-out;
  }
  
  /* Simple button styling */
  .refined-button {
    border: 2px solid black;
    background: white;
    color: black;
    padding: 1rem 2rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    transition: all 0.3s ease;
    display: inline-block;
  }
  
  .refined-button:hover {
    background: black;
    color: white;
  }
  
  /* Spacing utilities */
  .refined-spacing {
    margin: 2rem 0;
  }
  
  /* Fixed responsive behavior for outline text */
  @media (max-width: 768px) {
    .refined-outline {
      /* Ensure text doesn't break layout on mobile */
      max-width: 100%;
      word-break: break-word;
    }
  }
</style>